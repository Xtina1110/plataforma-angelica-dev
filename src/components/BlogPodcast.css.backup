/* ========================================
   BLOG & PODCAST - CSS COMPLETO
   Siguiendo el estilo de la Plataforma Angélica
   ======================================== */

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

.blog-podcast-principal {
  font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  color: #333;
  line-height: 1.6;
  background: linear-gradient(135deg, #fafafa 0%, #f0f0ff 25%, #fff8e1 50%, #f3e5f5 75%, #e8f5e8 100%);
  min-height: 100vh;
}

/* ========================================
   HEADER PRINCIPAL
   ======================================== */
.header-blog-podcast {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 50%, #ffed4e 100%);
  color: #333;
  padding: 20px 0;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4px 20px rgba(212, 175, 55, 0.3);
}

.header-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn-volver-blog-podcast, .btn-volver {
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: white;
  padding: 12px 24px;
  border-radius: 25px;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  font-weight: 600;
  text-decoration: none;
}

.btn-volver-blog-podcast:hover, .btn-volver:hover {
  background: rgba(255, 255, 255, 0.3);
  border-color: rgba(255, 255, 255, 0.5);
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.header-title-blog-podcast, .header-title {
  text-align: center;
  flex: 1;
}

.header-title-blog-podcast h1, .header-title h1 {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 8px;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

.header-title-blog-podcast p, .header-title p {
  font-size: 1.1rem;
  opacity: 0.9;
}

.header-actions {
  display: flex;
  gap: 10px;
}

.btn-header {
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: white;
  padding: 10px 16px;
  border-radius: 25px;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  font-weight: 600;
}

.btn-header:hover {
  background: rgba(255, 255, 255, 0.3);
  border-color: rgba(255, 255, 255, 0.5);
  transform: translateY(-2px);
}

.header-spacer {
  width: 120px;
}

/* ========================================
   HERO SECTION
   ======================================== */
.hero-blog-podcast {
  padding: 60px 20px;
  text-align: center;
  background: linear-gradient(135deg, rgba(212, 175, 55, 0.05) 0%, rgba(255, 237, 78, 0.05) 100%);
}

.hero-content {
  max-width: 1200px;
  margin: 0 auto;
}

.hero-stats {
  display: flex;
  justify-content: center;
  gap: 60px;
  margin-bottom: 40px;
  flex-wrap: wrap;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 15px;
  background: white;
  padding: 20px 30px;
  border-radius: 20px;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  border: 2px solid transparent;
  transition: all 0.3s ease;
}

.stat-item:hover {
  border-color: #d4af37;
  transform: translateY(-5px);
}

.stat-item svg {
  color: #d4af37;
}

.stat-number {
  font-size: 2rem;
  font-weight: 700;
  color: #333;
  display: block;
}

.stat-label {
  font-size: 0.9rem;
  color: #666;
  display: block;
}

.hero-titulo {
  font-size: 3rem;
  font-weight: 700;
  margin-bottom: 20px;
  background: linear-gradient(135deg, #d4af37 0%, #ffed4e 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-descripcion {
  font-size: 1.2rem;
  color: #666;
  line-height: 1.7;
  max-width: 800px;
  margin: 0 auto;
}

/* ========================================
   OPCIONES PRINCIPALES
   ======================================== */
.opciones-blog-podcast {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px 60px;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
  gap: 40px;
}

.opcion-card {
  background: white;
  border-radius: 25px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  cursor: pointer;
  border: 3px solid transparent;
  position: relative;
}

.opcion-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
}

.blog-card:hover {
  border-color: #d4af37;
  box-shadow: 0 20px 50px rgba(212, 175, 55, 0.2);
}

.podcast-card:hover {
  border-color: #d4af37;
  box-shadow: 0 20px 50px rgba(212, 175, 55, 0.2);
}

.card-header {
  position: relative;
  padding: 40px 30px 20px;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.card-icono {
  width: 80px;
  height: 80px;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
}

.blog-icono {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
}

.podcast-icono {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
}

.card-badge {
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.card-badge.nuevo {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  color: white;
}

.card-badge.popular {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  color: white;
}

.card-content {
  padding: 0 30px 40px;
}

.card-titulo {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 15px;
  color: #333;
}

.card-descripcion {
  font-size: 1.1rem;
  color: #666;
  line-height: 1.6;
  margin-bottom: 25px;
}

.contenido-preview {
  background: #f8f9fa;
  padding: 20px;
  border-radius: 15px;
  margin-bottom: 25px;
}

.contenido-preview h4 {
  font-size: 1rem;
  font-weight: 600;
  color: #333;
  margin-bottom: 15px;
}

.contenido-preview ul {
  list-style: none;
}

.contenido-preview li {
  display: flex;
  flex-direction: column;
  gap: 5px;
  margin-bottom: 12px;
  padding-bottom: 12px;
  border-bottom: 1px solid #e0e0e0;
}

.contenido-preview li:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.preview-titulo {
  font-weight: 600;
  color: #333;
  font-size: 0.9rem;
  line-height: 1.3;
}

.preview-meta {
  font-size: 0.8rem;
  color: #666;
}

.card-stats {
  display: flex;
  gap: 20px;
  margin-bottom: 30px;
  padding: 20px;
  background: #f8f9fa;
  border-radius: 15px;
  flex-wrap: wrap;
}

.stat {
  display: flex;
  align-items: center;
  gap: 6px;
  color: #666;
  font-size: 0.9rem;
  font-weight: 500;
}

.btn-acceder {
  width: 100%;
  padding: 18px 24px;
  border: none;
  border-radius: 15px;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.blog-btn {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #333;
  box-shadow: 0 6px 20px rgba(212, 175, 55, 0.3);
}

.blog-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(212, 175, 55, 0.4);
}

.podcast-btn {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #333;
  box-shadow: 0 6px 20px rgba(212, 175, 55, 0.3);
}

.podcast-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(212, 175, 55, 0.4);
}

/* ========================================
   CONTENIDO DESTACADO
   ======================================== */
.contenido-destacado {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px 60px;
}

.contenido-destacado h3 {
  font-size: 2rem;
  font-weight: 700;
  text-align: center;
  margin-bottom: 40px;
  color: #333;
}

.destacado-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
  gap: 30px;
}

.destacado-item {
  background: white;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2px solid transparent;
}

.destacado-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
}

.blog-destacado:hover {
  border-color: #d4af37;
}

.podcast-destacado:hover {
  border-color: #d4af37;
}

.destacado-imagen {
  position: relative;
  height: 200px;
  overflow: hidden;
}

.destacado-imagen img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.destacado-item:hover .destacado-imagen img {
  transform: scale(1.05);
}

.destacado-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.destacado-item:hover .destacado-overlay {
  opacity: 1;
}

.destacado-info {
  padding: 25px;
}

.destacado-tipo {
  font-size: 0.9rem;
  font-weight: 600;
  color: #d4af37;
  margin-bottom: 10px;
  display: block;
}

.podcast-destacado .destacado-tipo {
  color: #d4af37;
}

.destacado-info h4 {
  font-size: 1.3rem;
  font-weight: 700;
  color: #333;
  margin-bottom: 10px;
  line-height: 1.3;
}

.destacado-info p {
  color: #666;
  line-height: 1.5;
  margin-bottom: 15px;
}

.destacado-meta {
  display: flex;
  gap: 15px;
  font-size: 0.9rem;
  color: #666;
}

/* ========================================
   REDES SOCIALES
   ======================================== */
.redes-sociales-section {
  background: linear-gradient(135deg, #f8f9ff 0%, #fff8e1 100%);
  padding: 60px 20px;
  margin-top: 40px;
}

.redes-content {
  max-width: 1200px;
  margin: 0 auto;
  text-align: center;
}

.redes-content h3 {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 15px;
  color: #333;
}

.redes-content p {
  font-size: 1.1rem;
  color: #666;
  margin-bottom: 40px;
}

.redes-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
}

.red-social {
  background: white;
  padding: 20px;
  border-radius: 15px;
  display: flex;
  align-items: center;
  gap: 15px;
  text-decoration: none;
  color: #333;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  border: 2px solid transparent;
}

.red-social:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  text-decoration: none;
  color: #333;
}

.red-social.youtube:hover {
  border-color: #ff0000;
}

.red-social.instagram:hover {
  border-color: #e4405f;
}

.red-social.facebook:hover {
  border-color: #1877f2;
}

.red-social.telegram:hover {
  border-color: #0088cc;
}

.red-nombre {
  font-weight: 600;
  font-size: 1.1rem;
  display: block;
}

.red-seguidores {
  font-size: 0.9rem;
  color: #666;
  display: block;
}

/* ========================================
   SECCIONES ESPECÍFICAS
   ======================================== */
.blog-section, .podcast-section {
  background: linear-gradient(135deg, #fafafa 0%, #f0f0ff 25%, #fff8e1 50%, #f3e5f5 75%, #e8f5e8 100%);
  min-height: 100vh;
}

.blog-header, .podcast-header {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #333;
  padding: 20px 0;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4px 20px rgba(212, 175, 55, 0.3);
}

.podcast-header {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #333;
  box-shadow: 0 4px 20px rgba(212, 175, 55, 0.3);
}

/* ========================================
   INFORMACIÓN DEL CANAL
   ======================================== */
.canal-info {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #333;
  padding: 40px 20px;
  margin-bottom: 40px;
}

.canal-content {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  gap: 30px;
  flex-wrap: wrap;
}

.canal-avatar {
  width: 100px;
  height: 100px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  flex-shrink: 0;
}

.canal-details {
  flex: 1;
  min-width: 300px;
}

.canal-details h2 {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 10px;
}

.canal-details p {
  font-size: 1.1rem;
  line-height: 1.6;
  margin-bottom: 15px;
  opacity: 0.9;
}

.canal-stats {
  display: flex;
  gap: 20px;
  font-size: 0.9rem;
  font-weight: 600;
  flex-wrap: wrap;
}

.btn-suscribir {
  background: #ff0000;
  color: white;
  border: none;
  padding: 15px 25px;
  border-radius: 15px;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 10px;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.btn-suscribir:hover {
  background: #cc0000;
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(255, 0, 0, 0.3);
}

/* ========================================
   CONTROLES DE BÚSQUEDA Y FILTROS
   ======================================== */
.blog-controles, .podcast-controles {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px 20px;
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
  align-items: center;
}

.busqueda-container {
  position: relative;
  flex: 1;
  min-width: 300px;
}

.busqueda-icono {
  position: absolute;
  left: 15px;
  top: 50%;
  transform: translateY(-50%);
  color: #666;
  z-index: 1;
}

.busqueda-input {
  width: 100%;
  padding: 15px 15px 15px 45px;
  border: 2px solid #e0e0e0;
  border-radius: 25px;
  font-size: 1rem;
  background: white;
  transition: all 0.3s ease;
}

.busqueda-input:focus {
  outline: none;
  border-color: #d4af37;
  box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
}

.podcast-section .busqueda-input:focus {
  border-color: #d4af37;
  box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
}

.filtros-container {
  display: flex;
  gap: 15px;
  align-items: center;
}

.filtro-select {
  padding: 12px 20px;
  border: 2px solid #e0e0e0;
  border-radius: 25px;
  background: white;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.filtro-select:focus {
  outline: none;
  border-color: #d4af37;
}

.podcast-section .filtro-select:focus {
  border-color: #d4af37;
}

.vista-controles {
  display: flex;
  gap: 5px;
  background: white;
  border-radius: 25px;
  padding: 5px;
  border: 2px solid #e0e0e0;
}

.btn-vista {
  padding: 10px 15px;
  border: none;
  background: transparent;
  border-radius: 20px;
  cursor: pointer;
  transition: all 0.3s ease;
  color: #666;
}

.btn-vista.activo {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #333;
}

.podcast-section .btn-vista.activo {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #333;
}

.btn-vista:hover:not(.activo) {
  background: #f0f0f0;
}

/* ========================================
   CATEGORÍAS
   ======================================== */
.categorias-blog, .categorias-podcast {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px 30px;
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.categoria-btn {
  padding: 10px 20px;
  border: 2px solid #e0e0e0;
  background: white;
  border-radius: 25px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 500;
  color: #666;
}

.categoria-btn:hover {
  border-color: #d4af37;
  color: #d4af37;
}

.categoria-btn.activa {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #333;
  border-color: #d4af37;
}

.podcast-section .categoria-btn:hover {
  border-color: #d4af37;
  color: #d4af37;
}

.podcast-section .categoria-btn.activa {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #333;
  border-color: #d4af37;
}

/* ========================================
   CONTENEDORES DE ARTÍCULOS Y EPISODIOS
   ======================================== */
.articulos-container, .episodios-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px 40px;
  display: grid;
  gap: 25px;
}

.articulos-container.vista-grid, .episodios-container.vista-grid {
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
}

.articulos-container.vista-list, .episodios-container.vista-list {
  grid-template-columns: 1fr;
}

.sin-resultados {
  text-align: center;
  padding: 60px 20px;
  color: #666;
  grid-column: 1 / -1;
}

.sin-resultados-icono {
  color: #ccc;
  margin-bottom: 20px;
}

.sin-resultados h3 {
  font-size: 1.5rem;
  margin-bottom: 10px;
  color: #333;
}

/* ========================================
   TARJETAS DE ARTÍCULOS
   ======================================== */
.articulo-card {
  background: white;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2px solid transparent;
  cursor: pointer;
  position: relative;
}

.articulo-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  border-color: #d4af37;
}

.articulo-card.list {
  display: flex;
  align-items: center;
}

.articulo-card.list .articulo-imagen {
  width: 200px;
  height: 150px;
  flex-shrink: 0;
}

.articulo-card.list .articulo-info {
  flex: 1;
  padding: 25px;
}

.articulo-imagen {
  position: relative;
  width: 100%;
  height: 200px;
  overflow: hidden;
}

.articulo-imagen img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.articulo-card:hover .articulo-imagen img {
  transform: scale(1.05);
}

.destacado-badge {
  position: absolute;
  top: 15px;
  left: 15px;
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  color: #333;
  padding: 6px 12px;
  border-radius: 15px;
  font-size: 0.8rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 5px;
}

.btn-favorito-card {
  position: absolute;
  top: 15px;
  right: 15px;
  background: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  color: #ccc;
  backdrop-filter: blur(10px);
}

.btn-favorito-card:hover {
  background: white;
  color: #ff6b6b;
  transform: scale(1.1);
}

.btn-favorito-card.activo {
  color: #ff6b6b;
  background: white;
}

.articulo-info {
  padding: 25px;
}

.articulo-header {
